<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healthify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lt_blue</item>
        <item name="colorPrimaryVariant">@color/lt_darkpblue</item>
        <item name="colorOnPrimary">@color/surface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lt_blue</item>
        <item name="colorSecondaryVariant">@color/lt_yellow</item>
        <item name="colorOnSecondary">@color/surface</item>

        <item name="colorSurface">@color/surface</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="colorBackgroundFloating">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/surface</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Healthify.NoStatusBarTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:colorAccent">@color/lt_deepblue</item>
        <item name="android:textColor">@color/lt_deepblue</item>
        <item name="android:textColorPrimary">@color/lt_deepblue</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyText</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="AlertDialogBodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/lt_deepblue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/lt_deepblue</item>
    </style>

    <style name="ProfileButtons">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Body1</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorOnBackground">@color/lt_deepblue</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/lt_deepblue</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/lt_deepblue</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/dashboard_title_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Headline4
        </item>
    </style>

    <style name="authBg">
        <item name="android:background">@color/lt_blue</item>
    </style>

    <style name="ColoredText">
        <item name="android:textColor">@color/lt_darkpblue</item>
    </style>

    <style name="questionColor">
        <item name="android:textColor">@color/lt_darkpblue</item>
    </style>

    <style name="grayText">
        <item name="android:textColor">@color/gray5</item>
    </style>
</resources>