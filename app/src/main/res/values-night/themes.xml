<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Healthify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dt_darkpblue</item>
        <item name="colorPrimaryVariant">@color/dt_deepblue</item>
        <item name="colorOnPrimary">@color/dt_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dt_yellow</item>
        <item name="colorSecondaryVariant">@color/dt_pink</item>
        <item name="colorOnSecondary">@color/dt_darkpblue</item>

        <item name="colorSurface">@color/dt_darkpblue</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>


        <item name="colorBackgroundFloating">@color/dt_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Healthify.NoStatusBarTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:colorAccent">@color/dt_yellow</item>
        <item name="android:textColor">@color/dt_gray</item>
        <item name="android:textColorPrimary">@color/dt_gray</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyText</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="AlertDialogBodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:alpha">0.3</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dt_gray</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dt_gray</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="colorBackgroundFloating">@color/dt_blue</item>
        <item name="colorOnBackground">@color/dt_gray</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/dashboard_title_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Headline4
        </item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/dt_yellow</item>
        <item name="colorSurface">@color/dt_darkpblue</item>
        <item name="colorOnSurface">@color/dt_yellow</item>
    </style>

    <style name="authBg">
        <item name="android:background">@color/dt_darkpblue</item>
    </style>

    <style name="ColoredText">
        <item name="android:textColor">@color/dt_yellow</item>
    </style>

    <style name="questionColor">
        <item name="android:textColor">@color/dt_pink</item>
    </style>

    <style name="grayText">
        <item name="android:textColor">@color/dt_gray</item>
    </style>
</resources>